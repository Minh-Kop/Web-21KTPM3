<div class='login-page'>
    <div class='login-content'>
        <h1 class='login__heading'>
            FABANK
        </h1>
        <div class='d-flex justify-content-center'>
            <form action='' class='login-form'>
                <h1 class='login-form__heading'>
                    Login
                </h1>

                {{! Username }}
                <div class='login-form__input-area'>
                    <label class='login-form__label' for='loginUsername'>
                        Username
                    </label>
                    <input
                        type='text'
                        class='login-form__input'
                        id='loginUsername'
                        placeholder='Username'
                    />
                    <p class='form-error d-none'></p>
                </div>

                {{! Password }}
                <div class='login-form__input-area'>
                    <label
                        class='login-form__label'
                        for='loginPassword'
                    >Password</label>
                    <input
                        type='password'
                        class='login-form__input'
                        id='loginPassword'
                        placeholder='Password'
                    />
                    <p class='form-error d-none'></p>
                </div>

                {{! Submit button }}
                <button
                    id='login'
                    class='login-form__btn'
                    type='submit'
                    data-next-url='{{nextUrl}}'
                >
                    Login
                </button>
            </form>
        </div>
    </div>
</div>

<link rel='stylesheet' href='/assets/css/login.css' />